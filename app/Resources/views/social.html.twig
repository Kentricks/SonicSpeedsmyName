<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}2SN{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type='text/css' />
            <link rel="stylesheet" href="{{ asset('css/main.css') }}" type='text/css' />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="navbar">
            {% block navbar %}
            <div class="navbar navbar">
                <div class="row-fluid">
                    <img src="{{ asset('img/logo2sn.png') }}" alt="Logo 2SN" style="height:80px; position: absolute;" />
                    <div class="navbar-inner" style="padding-left: 130px; padding-top: 20px; border: 0;">
                        <ul class="nav">
                            <li>
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <a class="brand" href="#">Accueil</a>
                                {% else %}
                                <a class="brand" href=" {{ path('etna_social_login') }}">Accueil</a>
                                {% endif %}
                            </li>

                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li><a href="{{ path('etna_social_home') }}">Mon compte</a></li>
                            <li><a href="#">Messages</a></li>
                            <li><a href="#">Mes amis</a></li>
                            {% endif %}

                        
                        </ul>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <ul class="nav pull-right">
                        <li><a href="{{ path('fos_user_security_logout') }}"><i class="icon-off"></i> Deconnexion</a></li>
                        </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endblock %}
        </div>

        <div id="content">
            {% block body %}{% endblock %}
        </div>

        <footer>
            {% block footer %}
            <div class="navbar navbar">
                <div class="navbar-inner">
                        <ul class="nav">
                            <li><a href="#">A Propos</a></li>
                            <li><a href="#">Â© Copyright 2013 </a></li>
                        </ul>
                </div>
            </div>
            {% endblock %}
        </footer>

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-1.9.1.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
